CC = tcc

CFLAGS += -Wall
CFLAGS += -Wextra
CFLAGS += -O2
CFLAGS += -I../deps/tinycc/include
LDFLAGS += -L../deps/tinycc
LDFLAGS += -ltcc
TCCFLAGS += -B../deps/tinycc
TCCFLAGS += -nostdinc

ifeq ($(TUP_32_BIT),y)
CFLAGS += -m32
LDFLAGS += -m32
endif

!cc = |> ^ CC %f^ $(CC) $(CFLAGS) -c %f -o %o |> %B.o
!ld = |> ^ LINK %o^ $(CC) $(LDFLAGS) %f -o %o |>
